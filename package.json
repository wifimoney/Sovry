{
  "name": "sovry",
  "version": "1.0.0",
  "description": "Sovry DEX - Decentralized Exchange for IP Assets",
  "main": "server.js",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts --network aeneid",
    "deploy:fast": "cross-env SKIP_VERIFICATION=true hardhat run scripts/deploy.ts --network aeneid",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "verify": "hardhat verify --network aeneid",
    "typechain": "hardhat typechain",
    "goldsky:codegen": "graph codegen",
    "goldsky:build": "graph build",
    "goldsky:deploy": "goldsky subgraph deploy sovry-aeneid/1.0.0 --path .",
    "goldsky:deploy:dev": "goldsky subgraph deploy sovry-aeneid-dev/1.0.0 --path .",
    "goldsky:list": "goldsky subgraph list",
    "goldsky:status": "goldsky subgraph list sovry-aeneid-dev",
    "goldsky:logs": "goldsky subgraph log sovry-aeneid-dev/1.0.0 --tail 50",
    "goldsky:delete": "goldsky subgraph delete sovry-aeneid-dev/1.0.0",
    "subgraph:codegen": "cd subgraph && graph codegen",
    "subgraph:build": "cd subgraph && graph build",
    "dev:backend": "node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "worker": "node start-worker.js",
    "dev:worker": "nodemon start-worker.js",
    "start:worker": "node start-worker.js",
    "start:api": "node server.js",
    "build": "cd frontend && npm run build",
    "build:all": "npm run compile && npm run build",
    "start": "concurrently \"npm run dev:backend\" \"cd frontend && npm run start\"",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.79.0",
    "@graphprotocol/graph-ts": "^0.35.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^4.3.10",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^2.2.1",
    "solidity-coverage": "^0.8.15",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@story-protocol/core-sdk": "^1.4.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^5.7.2",
    "express": "^5.1.0",
    "nodemon": "^3.1.11",
    "viem": "^2.39.2"
  }
}
